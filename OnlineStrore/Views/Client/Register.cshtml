@using OnlineStrore.Dto
<!-- Модальное окно регистрации -->
@model CreateClientDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация</title>
    <!-- Подключаем стили -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .modal-reg {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .modal-content h2 {
                text-align: center;
                color: #343a40;
                margin-bottom: 20px;
                font-size: 24px;
            }

        label {
            font-weight: bold;
            color: #495057;
            margin-bottom: 5px;
            display: inline-block;
        }

        input[type="text"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input[type="checkbox"] {
            margin-right: 10px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #0056b3;
            }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .error {
            color: red;
            font-size: 12px;
        }

        .modal-content input[type="text"]:invalid,
        .modal-content input[type="email"]:invalid {
            border-color: #dc3545;
        }

        .modal-content input[type="text"]:valid,
        .modal-content input[type="email"]:valid {
            border-color: #28a745;
        }
    </style>
</head>
<body>
    <!-- Модальное окно Регистрации -->
    <div id="registerModal" class="modal-reg">
        <div class="modal-content">
            <h2>Регистрация</h2>
            @Html.ValidationSummary(true)

            <form asp-action="CreateClient" asp-controller="Client" method="post">
                <label>Имя</label><br>
                <input type="text" asp-for="Name" required><br>
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "error" })

                <label>Email</label><br>
                <input type="email" asp-for="Email" required><br>
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "error" })

                <label>Ваш телефон:</label><br>
                <input type="text" asp-for="PhoneNubmer" required><br>
                @Html.ValidationMessageFor(x => x.PhoneNubmer, null, new { @class = "error" })

                <label>Пароль</label><br>
                <input type="text" asp-for="Password" required><br>
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "error" })

                <label>Повторите пароль</label><br>
                <input type="text" asp-for="ConnfigurePasswrod" required><br>
                @Html.ValidationMessageFor(x => x.ConnfigurePasswrod, null, new { @class = "error" })

                <input type="checkbox" id="offers" name="offers">
                <label for="offers">Получать информацию об акциях и скидках</label><br><br>

                <input type="checkbox" id="privacy" name="privacy" required>
                <label for="privacy">
                    Я ознакомлен и согласен с условиями
                    <a href="https://s01.cdn.pegast.ru/get/6b/22/bc/e9e40f69c9c629f7445dc32489a006895608fdaa80716b074ffd4e68cd/pd-pegas-Touristik-msk.pdf" target="_blank">политики конфиденциальности</a> и даю согласие на обработку
                    персональных данных.
                </label><br><br>
                <button type="submit">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</body>
