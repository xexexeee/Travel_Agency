@using OnlineStrore.Dto
<!-- Модальное окно регистрации -->
@model CreateFeedbackDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9fafb;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        overflow: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #ffffff;
        margin: auto;
        padding: 30px;
        border-radius: 12px;
        width: 90%;
        max-width: 450px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        position: relative;
        animation: fadeIn 0.4s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .modal-content h2 {
        color: #333;
        margin-bottom: 20px;
        font-size: 22px;
        text-align: center;
    }

    label {
        font-size: 16px;
        color: #555;
        display: block;
        margin-bottom: 10px;
    }

    textarea {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 12px;
        font-size: 14px;
        resize: none;
        margin-bottom: 20px;
        transition: border-color 0.3s;
    }

        textarea:focus {
            outline: none;
            border-color: #007BFF;
        }

    button {
        background-color: #007BFF;
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 12px 20px;
        font-size: 16px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #0056b3;
        }

    .validation-summary-errors {
        background-color: #ffe5e5;
        border: 1px solid #ffcccc;
        padding: 12px;
        margin-bottom: 20px;
        border-radius: 6px;
        color: #d8000c;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Оставить отзыв</title>
</head>
<body>
    <div id="feedbackModal" class="modal">
        <div class="modal-content">
            <h2>Оставить отзыв</h2>
            @Html.ValidationSummary(true)
            <form asp-action="ClientFeedback" asp-controller="Client" method="post">
                <label>Ваш отзыв:</label>
                <textarea asp-for="Description" rows="6" required></textarea>
                @Html.ValidationMessageFor(x => x.Description)
                <button type="submit">Оставить отзыв</button>
            </form>
        </div>
    </div>
    <button id="openModalButton">Оставить отзыв</button>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('feedbackModal');
            const openButton = document.getElementById('openModalButton');

            openButton.addEventListener('click', () => {
                modal.style.display = 'flex';
            });
        });
    </script>
</body>
