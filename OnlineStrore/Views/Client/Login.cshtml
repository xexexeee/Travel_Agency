@using OnlineStrore.Controllers
@using OnlineStrore.Dto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!--Вход-->
@model LoginClientDto
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вход</title>
    <style>
        /* Общие стили */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Контейнер модального окна */
        #loginModal {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.5);
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
        }

        /* Содержимое модального окна */
        .modal-content {
            background: #ffffff;
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 90%;
        }

        h2 {
            font-size: 24px;
            color: #343a40;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #6c757d;
            text-align: left;
        }

        input[type="email"], input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            font-size: 14px;
        }

            input[type="email"]:focus, input[type="password"]:focus {
                outline: none;
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .validation-message {
            color: #dc3545;
            font-size: 12px;
            margin-bottom: 10px;
            text-align: left;
        }

        button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                background-color: #0056b3;
            }

            button:active {
                background-color: #003f7f;
            }

            button:disabled {
                background-color: #adb5bd;
                cursor: not-allowed;
            }

        a {
            color: #007bff;
            text-decoration: none;
            font-size: 14px;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div id="loginModal">
        <div class="modal-content">
            <h2>Войти</h2>
            @Html.ValidationSummary(true, null, new { @class = "validation-message" })
            <form asp-action="LoginClient" asp-controller="Client" method="post">
                <label for="Email">Email</label>
                <input type="email" asp-for="Email" id="Email" required />
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "validation-message" })

                <label for="Password">Пароль</label>
                <input type="password" asp-for="Password" id="Password" required />
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "validation-message" })

                <button type="submit">Войти</button>
                <br><br>
                <a href="#">Забыли пароль?</a>
            </form>
        </div>
    </div>
</body>
</html>
